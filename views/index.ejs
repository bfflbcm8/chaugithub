<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>ATN Web Shop</title>
    </head>
    <body>
        <h1>Add Toys Product </h1>
        <form action="/Product" method="GET">
            <input type="text" placeholder="name" name="name" />
            <input type="text" placeholder="brand" name="brand">
            <input type="text" placeholder="price" name="price">
            <button type="submit">Submit</button>
        </form>

        <h2> Product List </h2>
        <ul class="quote">
            <!-- Loop through quotes -->
            <% for(var i = 0; i < quotes.length; i++) {%>
                <li class="quote">
                    <!-- Output name from the iterated quote object -->
                    <span><%= quotes[i].name %></span>:
                    <!-- Output quote from the iterated quote object -->
                    <span><%= quotes[i].brand %></span>
                    <!-- Output quote from the iterated quote object -->
                    <span><%= quotes[i].price %></span>
                </li>
            <% } %>
        </ul>

    </body>
</html>
